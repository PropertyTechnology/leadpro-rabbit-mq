{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["es2017","es7", "es6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
